```
#include <iostream>

using namespace std;

// Recursive function to return the nth term in the Fibonacci sequence
int fibonacci(int n) {
  if (n == 0 || n == 1) {
    return n;
  }
  return fibonacci(n - 1) + fibonacci(n - 2);
}

int main() {
  int n;
  cout << "Enter the term number: ";
  cin >> n;

  cout << "The " << n << "th term in the Fibonacci sequence is " << fibonacci(n) << endl;
  return 0;
}
```
